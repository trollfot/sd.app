<?xml version="1.0"?>
<portlets xmlns:i18n="http://xml.zope.org/namespaces/i18n">
  
 <!-- contextual portlet manager -->
 <portletmanager 
   name="sd.blocks" 
   type="sd.app.portlets.manager.interfaces.IStructuredDocumentBlocks"
   />

 <!-- portlets -->
 <portlet 
   addview="sd.country"
   title="Country portlet"
   description="A portlet representing a country."
   i18n:attributes="title title_country_portlet;
                    description description_country_portlet">
   <for interface="plone.app.portlets.interfaces.IColumn" />
   <for interface="sd.app.portlets.manager.interfaces.IStructuredDocumentBlocks" />
 </portlet>

 <portlet 
