<?xml version="1.0"?>
<object name="portal_actions"
	meta_type="Plone Actions Tool"
	xmlns:i18n="http://xml.zope.org/namespaces/i18n">


 <object name="object"
	 meta_type="CMF Action Category">

   <object i18n:domain="sd"
	   name="sd.preferences"
	   meta_type="CMF Action" >
     <property name="title"
	       i18n:translate="sd.preferences">Embedded display preferences</property>
     <property name="description"></property>
     <property name="url_expr">string:$object_url/@@sd.preferences</property>
     <property name="icon_expr"></property>
     <property
	 name="available_expr">object/@@sd.show_preferences|nothing</property>
     <property name="permissions">
       <element value="Modify portal content"/>
     </property>
     <property name="visible">True</property>
   </object>

 </object>
</object>